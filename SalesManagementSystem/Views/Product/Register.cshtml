@model ProductModel
<h2>Client Register</h2>
<br />
<form asp-controller="Product" asp-action="Register">
    <input type="hidden" asp-for="Id" value="@try { @ViewBag.Product.Id} catch { } " />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" type="text" class="form-control" value="@try { @ViewBag.Product.Name} catch { } " />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" type="text" class="form-control" value="@try { @ViewBag.Product.Description} catch { } " />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" type="text" class="form-control" value="@try { @ViewBag.Product.Price} catch { } " />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Stock</label>
        <input asp-for="Quantity_inStock" type="text" class="form-control" value="@try { @ViewBag.Product.Quantity_inStock} catch { } " />
        <span asp-validation-for="Quantity_inStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Unit</label>
        @*@<input asp-for="Unit" type="text" class="form-control" value="@try { @ViewBag.Product.Unit} catch { } " />*@

        @{
            var vUnit = "";
            try
            {
                vUnit = ViewBag.Product.Unit;
            }
            catch
            {

            }
        }

        <select asp-for="Unit" class="form-control">
            @{
                if (vUnit != "")
                {
                    <option value="@vUnit" selected>@vUnit</option>
                }
            }
            <option value="un">Un</option>
            <option value="cx">cx</option>
            <option value="kg">Kg</option>
        </select>

        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Image</label>
        @try
        {
            <img src="@try { @ViewBag.Product.Image} catch { } " width="100" height="100" />
        }
        catch
        {

        }
        <input asp-for="Image" type="text" class="form-control" value="@try { @ViewBag.Product.Image} catch { } " />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Save</button>
</form>
<br />
<button type="button" class="btn btn-block btn-primary" onclick="Back()">List Products</button>
<script>
    function Back() {
        window.location.href = '../../Product/Index';
    }
</script>